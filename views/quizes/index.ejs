<table>
 <thead><h3>Preguntas</h3></thead>
 <tbody>
	<tr class="border_bottom">
		<td>Crear Pregunta</td>
		<td colspan="2">
			<a href="/quizes/new"><button type="button">Crear pregunta</button></a>
		</td>
	</tr>
	<% for(var i=0; i<quizes.length; i++) { %>
		<tr class="border_bottom">
			<td>
				<a href="quizes/<%= quizes[i].id %>">
					<%= quizes[i].pregunta %> <small>(<%= quizes[i].tematica %>)</small>
				</a>
			</td>
			<td>
				<a href="quizes/<%= quizes[i].id %>/edit">
					<button>Editar</button>
				</a>
			</td>
			<td>
				<form 
					method="post" 
					action="quizes/<%= quizes[i].id %>?_method=delete"
				>
					<button 
						type="submit"
						onClick="return confirm('Borrar: <%= quizes[i].pregunta %>');"
					>
						Borrar
					</button>
				</form>
			</td>
		</tr>
	<% } %>
 </tbody>
</table> <p>

